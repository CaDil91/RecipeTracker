{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security": {
    "AllowedOrigins": [
      "http://localhost:8081",
      "https://localhost:8081"
    ]
  },
  "AzureAd": {
    "Instance": "",
    "TenantId": "",
    "ClientId": ""
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "AzureStorage": {
    "AccountName": "foodbudgetstorage",
    "ContainerName": "recipe-images"
  },
  "ImageUpload": {
    "maxFileSizeMb": 10,
    "TokenExpirationMinutes": 5,
    "AllowedContentTypes": ["image/jpeg", "image/jpg", "image/png"]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "EndpointWhitelist": [
      "get:/health"
    ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 200
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 600
      },
      {
        "Endpoint": "*",
        "Period": "12h",
        "Limit": 2000
      }
    ]
  }
}
